    margin: var(--s6) auto var(--s8);
    line-height: 1.7;
  }

  .cta-group {
    display: flex;
    gap: var(--s4);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .hero {
      min-height: auto;
      padding-block: var(--s16) var(--s12);
    }

    .cta-group {
      flex-direction: column;
      align-items: stretch;
    }

    .cta-group .btn {
      justify-content: center;
    }
  }
</style>
