<style>
  .hero {
    min-height: 90vh;
    display: flex;
    align-items: center;
    text-align: center;
    padding-block: var(--s24) var(--s16);
    background:
      radial-gradient(ellipse 80% 60% at 50% 0%, rgba(255, 107, 74, 0.08) 0%, transparent 70%),
      radial-gradient(ellipse 60% 50% at 80% 20%, rgba(155, 114, 207, 0.06) 0%, transparent 60%);
  }

  .badge {
    display: inline-block;
    font-size: 0.8rem;
    padding: var(--s1) var(--s4);
    border: 1px solid var(--border);
    border-radius: 999px;
    color: var(--text-muted);
    margin-bottom: var(--s6);
    letter-spacing: 0.03em;
  }

  .subtitle {
    font-size: clamp(1.05rem, 1.5vw + 0.5rem, 1.25rem);
