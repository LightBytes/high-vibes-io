<style>
  .hero {
    min-height: 90vh;
    display: flex;
    align-items: center;
    text-align: center;
    padding-block: var(--s24) var(--s16);
    background:
      radial-gradient(ellipse 80% 60% at 50% 0%, rgba(255, 107, 74, 0.08) 0%, transparent 70%),
      radial-gradient(ellipse 60% 50% at 80% 20%, rgba(155, 114, 207, 0.06) 0%, transparent 60%);
  }

  .pill-row {
    display: flex;
    gap: var(--s3);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--s6);
  }

  .pill {
    display: inline-block;
    font-size: 0.8rem;
    padding: var(--s1) var(--s4);
    border: 1px solid var(--border);
    border-radius: 999px;
    color: var(--text-muted);
    letter-spacing: 0.03em;
    transition: transform 0.2s, box-shadow 0.2s, border-color 0.2s;
    animation: pill-fade-in 0.5s ease both;
  }

  .pill:nth-child(2) { animation-delay: 0.1s; }
  .pill:nth-child(3) { animation-delay: 0.2s; }
  .pill:nth-child(4) { animation-delay: 0.3s; }

  .pill:hover {
    transform: scale(1.06);
    border-color: var(--coral);
    box-shadow: 0 0 12px rgba(255, 107, 74, 0.15);
  }

  @keyframes pill-fade-in {
    from {
      opacity: 0;
      transform: translateY(0.5rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .subtitle {
    font-size: clamp(1.05rem, 1.5vw + 0.5rem, 1.25rem);
    color: var(--text-muted);
    max-width: 38rem;
    margin: var(--s6) auto var(--s8);
    line-height: 1.7;
  }

  .cta-group {
    display: flex;
    gap: var(--s4);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .hero {
      min-height: auto;
      padding-block: var(--s16) var(--s12);
    }

    .pill-row {
      gap: var(--s2);
    }

    .cta-group {
      flex-direction: column;
      align-items: stretch;
    }

    .cta-group .btn {
      justify-content: center;
    }
  }
</style>
